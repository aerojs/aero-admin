doctype html
html
	head
		title= app.config.title
	
		each mode in ['json', 'javascript', 'jade', 'stylus', 'markdown']
			link(rel='prefetch', href='https://cdnjs.cloudflare.com/ajax/libs/ace/1.2.5/mode-' + mode + '.js')
	
	body
		if !user
			main#content.fade.wallpaper
				a.login-button(href='/auth/google') Login via Google
		else
			header#header
				h1.title= app.site.config.title
				//- p.domain= app.site.config.domain
				nav#nav
					a.nav-link.ajax(href='/', title='Dashboard')
						i.fa.fa-fw.fa-dashboard
					a.nav-link.ajax(href='/pages', title='Pages')
						i.fa.fa-fw.fa-folder-open
					a.nav-link.disabled.ajax(href='/layout', title='Layout')
						i.fa.fa-fw.fa-table
					a.nav-link.disabled.ajax(href='/scripts', title='Scripts')
						i.fa.fa-fw.fa-code
					a.nav-link.disabled.ajax(href='/styles', title='Styles')
						i.fa.fa-fw.fa-css3
					a.nav-link.disabled.ajax(href='/seo', title='SEO')
						i.fa.fa-fw.fa-google
					a.nav-link.ajax(href='/security', title='Security')
						i.fa.fa-fw.fa-lock
					a.nav-link.ajax(href='/edit/config.json', title='Settings')
						i.fa.fa-fw.fa-cog
			
			main#content.fade!= content
			
			//- Ace Editor
			script(src='https://cdnjs.cloudflare.com/ajax/libs/ace/1.2.5/ace.js', charset='utf-8')
			script(src='https://cdnjs.cloudflare.com/ajax/libs/ace/1.2.5/theme-monokai.js')