html, body
	height 100%

body
	font-family "Open Sans", "Ubuntu", sans-serif
	font-size 16px
	color textColor
	display flex
	flex-flow column

a
	color linkColor
	text-decoration none

	&:hover
		color hoverColor

#header
	padding 0 1rem
	background headerBackground
	color headerTextColor
	flex-grow 0

#content
	padding 0 1rem
	flex-grow 1

.title
	display none

.domain
	line-height 1.3em
	opacity 0.5

span.fa
	margin-right 0.4em

button, .button
	font-family inherit
	background-color white
	border 1px solid buttonBorderColor
	border-radius 3px
	padding 0.4em 0.8em
	&:hover
		cursor pointer
		background-color buttonHoverBackground